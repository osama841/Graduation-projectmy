<Window x:Class="Apps.SecurePlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Fortress Shield - Secure Video Player" Height="720" Width="1280"
        Style="{StaticResource SecureWindowStyle}"
        WindowStartupLocation="CenterScreen">

    <Grid>
   
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0D1B2A" Offset="0"/>
                <GradientStop Color="#1B263B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- الـ Top Bar -->
        <Grid Height="80" VerticalAlignment="Top" Background="#0F1629">
            <Image Source="pack://application:,,,/Resources/YemenUniversityLogo.png" 
                   Width="70" Margin="20,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <TextBlock Text="نظام حماية المحتوى الرقمي والوسائط" 
                       Foreground="White" FontSize="18" FontWeight="SemiBold"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                <materialDesign:PackIcon Kind="ShieldCheck" Width="30" Height="30" Foreground="#00FF9D"/>
                <TextBlock Text="آمن ومشفر" Foreground="#00FF9D" Margin="10,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Sidebar -->
        <Grid Width="280" HorizontalAlignment="Left" Background="#16213E">
            <StackPanel Margin="20,100,20,20">
                <ListBox SelectedIndex="0" Background="Transparent" BorderThickness="0">
                    <ListBoxItem Padding="15" Background="#00D4FF22">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Home" Width="24" Height="24" Margin="0,0,10,0"/>
                            <TextBlock Text="لوحة التحكم" FontSize="16" Foreground="White"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Video" Width="24" Height="24" Margin="0,0,10,0"/>
                            <TextBlock Text="مشغل الفيديو" FontSize="16"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FilePdfBox" Width="24" Height="24" Margin="0,0,10,0"/>
                            <TextBlock Text="عارض PDF" FontSize="16"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Fingerprint" Width="24" Height="24" Margin="0,0,10,0"/>
                            <TextBlock Text="بصمة الجهاز" FontSize="16"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Logout" Width="24" Height="24" Margin="0,0,10,0"/>
                            <TextBlock Text="خروج" FontSize="16"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </Grid>

        <!-- المحتوى الرئيسي -->
        <Grid Margin="280,80,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="مرحباً بك في نظام الحماية الرقمية" 
                       FontSize="28" FontWeight="Bold" Foreground="White" 
                       Margin="40,40,0,20" Grid.Row="0"/>

            <Grid Grid.Row="1" Margin="40">
                <materialDesign:Card Background="{StaticResource CardBackground}" Padding="30"
                    materialDesign:ElevationAssist.Elevation="Dp3">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="ShieldLock" Width="100" Height="100" 
                                               HorizontalAlignment="Center" Foreground="#00D4FF"/>
                        <TextBlock Text="الجهاز مؤمن ومفعّل" FontSize="22" 
                                   HorizontalAlignment="Center" Margin="0,20" Foreground="#00FF9D"/>
                        <TextBlock Text="يمكنك الآن تشغيل المحتوى المحمي بأمان" 
                                   FontSize="16" HorizontalAlignment="Center" Foreground="#AAAAAA"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>
</Window>