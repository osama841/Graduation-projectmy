<UserControl x:Class="Apps.AdminPanel.Components.InfoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="ThisCard"
             Height="100" Width="180">

    <Border Background="{StaticResource PanelBackground}"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Title, ElementName=ThisCard}" 
                       Foreground="{StaticResource TextSecondary}"
                       FontSize="12" FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>

            <materialDesign:PackIcon Kind="{Binding Icon, ElementName=ThisCard}" 
                                   Grid.Row="1"
                                   Width="28" Height="28"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Margin="0,5">
                <materialDesign:PackIcon.Foreground>
                    <SolidColorBrush Color="{Binding AccentColor, ElementName=ThisCard}"/>
                </materialDesign:PackIcon.Foreground>
            </materialDesign:PackIcon>

            <TextBlock Text="{Binding Value, ElementName=ThisCard}" 
                       Grid.Row="2"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center">
            </TextBlock>
        </Grid>
    </Border>
</UserControl>