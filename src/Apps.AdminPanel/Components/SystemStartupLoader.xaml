<UserControl x:Class="Apps.AdminPanel.Components.SystemStartupLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FlowDirection="RightToLeft"
             
             x:Name="ThisLoader">

    <Grid Background="Transparent">
        <Border BorderBrush="{StaticResource NeonBlueBrush}" 
                BorderThickness="2" 
                CornerRadius="20" 
                Background="#CC050A14"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect Color="#00F0FF" BlurRadius="25" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>

            <Grid>
                <Rectangle HorizontalAlignment="Left" VerticalAlignment="Center" Width="4" Height="100" Fill="{StaticResource NeonBlueBrush}" Margin="-2,0,0,0"/>
                <Rectangle HorizontalAlignment="Right" VerticalAlignment="Center" Width="4" Height="100" Fill="{StaticResource NeonBlueBrush}" Margin="0,0,-2,0"/>
            </Grid>
        </Border>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="جارِ بدء تشغيل النظام..." 
                       Foreground="{StaticResource NeonBlueBrush}"
                       FontSize="32"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#00F0FF" BlurRadius="10" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>

            <Grid HorizontalAlignment="Center" Margin="0,0,0,40">
                <materialDesign:Card UniformCornerRadius="100" Padding="0" Background="Transparent"   BorderBrush="{StaticResource NeonBlueBrush}" BorderThickness="2">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Value="{Binding ProgressValue, ElementName=ThisLoader}"
                                 Maximum="100"
                                 Width="120"
                                 Height="120"
                                 Foreground="{StaticResource NeonBlueBrush}"
                                 BorderBrush="{StaticResource NeonBlueBrush}"/>
                </materialDesign:Card>

                <materialDesign:PackIcon Kind="Chip" 
                                       Width="60" Height="60"
                                       Foreground="{StaticResource NeonBlueBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                    <materialDesign:PackIcon.Effect>
                        <DropShadowEffect Color="#00F0FF" BlurRadius="5" ShadowDepth="0"/>
                    </materialDesign:PackIcon.Effect>
                </materialDesign:PackIcon>
            </Grid>

            <Grid Width="400" Margin="0,0,0,10">
                <ProgressBar Style="{StaticResource MaterialDesignLinearProgressBar}"
                             Value="{Binding ProgressValue, ElementName=ThisLoader}"
                             Maximum="100"
                             Height="20"
                             Foreground="{StaticResource NeonBlueBrush}"
                             Background="#112240"
                             BorderBrush="{StaticResource NeonBlueBrush}"
                             BorderThickness="1"/>

                <TextBlock Text="{Binding ProgressText, ElementName=ThisLoader}"
                           Foreground="White"
                           FontSize="12"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>

            <TextBlock Text="الرجاء الانتظار، يتم تهيئة المكونات..." 
                       Foreground="#B0B8C3"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Opacity="0.8"/>

        </StackPanel>
    </Grid>
</UserControl>
