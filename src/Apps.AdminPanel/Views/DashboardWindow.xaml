<Window x:Class="Apps.AdminPanel.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:components="clr-namespace:Apps.AdminPanel.Components"
        Title="لوحة التحكم"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackground}"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <SolidColorBrush x:Key="AppBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#252526"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3E3E42"/>
        <SolidColorBrush x:Key="AccentColor" Color="#00E676"/>
        <SolidColorBrush x:Key="WarningRed" Color="#FF5252"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#AAAAAA"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource PanelBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,30,0,30">
                    <materialDesign:PackIcon Kind="ShieldLock" Width="40" Height="40" Foreground="{StaticResource AccentColor}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="نظام التشفير" Foreground="{StaticResource TextPrimary}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="لوحة المشرف" Foreground="{StaticResource TextSecondary}" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10,0">

                        <components:TechButton Title="لوحة التحكم" 
                                              x:Name="BtnDashboard"
                                               Icon="ViewDashboard" 
                                               Background="#1500E676" 
                                               Foreground="{StaticResource AccentColor}"
                                               Height="50"
                                               Margin="0,2"
                                               Click="SidebarButton_Click"/>

                        <components:TechButton x:Name="BtnEncrypted" Click="SidebarButton_Click" Title="المحتوى المشفر" Icon="FileLock" Foreground="{StaticResource TextSecondary}" Background="Transparent" Height="50" Margin="0,2"/>
                        <components:TechButton x:Name="BtnEncryption" Click="SidebarButton_Click" Title="تشفير جديد" Icon="ShieldKey" Foreground="{StaticResource TextSecondary}" Background="Transparent" Height="50" Margin="0,2"/>
                        <components:TechButton x:Name="BtnLocal" Click="SidebarButton_Click" Title="المحتوى المحلي" Icon="FolderHome" Foreground="{StaticResource TextSecondary}" Background="Transparent" Height="50" Margin="0,2"/>

                        <Separator Background="{StaticResource BorderColor}" Margin="10,15" Opacity="0.5"/>

                        <components:TechButton x:Name="Data" Title="إدارة البيانات" Click="SidebarButton_Click" Icon="Database" Foreground="{StaticResource TextSecondary}" Background="Transparent" Height="50" Margin="0,2"/>
                        <components:TechButton x:Name="Users" Title="المستخدمون" Click="SidebarButton_Click" Icon="AccountGroup" Foreground="{StaticResource TextSecondary}" Background="Transparent" Height="50" Margin="0,2"/>
                        <components:TechButton  x:Name="Settings" Title="الإعدادات" Click="SidebarButton_Click" Icon="Cog" Foreground="{StaticResource TextSecondary}" Background="Transparent" Height="50" Margin="0,2"/>

                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Margin="20">
                    <components:TechButton Title="تسجيل الخروج" 
                                           Icon="Logout" 
                                           Foreground="{StaticResource WarningRed}" 
                                           BorderBrush="{StaticResource WarningRed}"
                                           BorderThickness="1"
                                           Click="BtnLogout_Click"
                                           Background="Transparent"
                                           Height="45"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="5">
            <ContentControl x:Name="MainContentArea"/>
        </Grid>
    </Grid>
</Window>