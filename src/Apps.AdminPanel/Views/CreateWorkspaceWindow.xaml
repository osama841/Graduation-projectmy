<Window x:Class="Apps.AdminPanel.Views.CreateWorkspaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:components="clr-namespace:Apps.AdminPanel.Components"
        mc:Ignorable="d"
        Title="إنشاء مساحة عمل" Width="600" Height="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        FlowDirection="RightToLeft"
        MouseDown="Window_MouseDown">

    <Grid>
        <!-- طبقة تغتيم خفيفة للخلفية -->
        <Border Background="#000000" Opacity="0.5" CornerRadius="4" Margin="5"/>

        <!-- الإطار الرئيسي -->
        <Border Margin="20"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="4"
                Background="{StaticResource PanelBackground}">

            <!-- ظل النافذة -->
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- العنوان -->
                    <RowDefinition Height="Auto"/>
                    <!-- اسم المساحة -->
                    <RowDefinition Height="Auto"/>
                    <!-- منطقة السحب -->
                    <RowDefinition Height="*"/>
                    <!-- قائمة الملفات -->
                    <RowDefinition Height="Auto"/>
                    <!-- الأزرار -->
                </Grid.RowDefinitions>

                <!-- العنوان -->
                <StackPanel Grid.Row="0" Margin="0,0,0,25" HorizontalAlignment="Center">
                    <Border Width="60" Height="60" CornerRadius="30" Background="{StaticResource AppBackground}" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="FolderPlusOutline" Width="30" Height="30" Foreground="{StaticResource AccentColor}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="إنشاء مساحة عمل جديدة" 
                               Foreground="{StaticResource TextPrimary}" 
                               FontSize="20" FontWeight="SemiBold" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- حقل الاسم -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <components:TechTextBox Grid.Column="1" 
                                            x:Name="TxtWorkspaceName" 
                                            Hint="اسم مساحة العمل (المشروع)" 
                                            Icon="FormatTitle" 
                                            Height="45"
                                            Background="{StaticResource ControlBackground}"/>
                </Grid>

                <!-- منطقة السحب والإفلات -->
                <Border Grid.Row="2" 
                        Height="100" 
                        Background="{StaticResource AppBackground}"
                        CornerRadius="4"
                        Margin="0,0,0,15"
                        AllowDrop="True"
                        Drop="DropArea_Drop">

                    <Grid Cursor="Hand">
                        <!-- حدود متقطعة -->
                        <Rectangle Stroke="{StaticResource AccentColor}" StrokeThickness="1" StrokeDashArray="4 4" RadiusX="4" RadiusY="4" Opacity="0.6"/>

                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="CloudUploadOutline" Width="35" Height="35" Foreground="{StaticResource AccentColor}" HorizontalAlignment="Center"/>
                            <TextBlock Text="اسحب الملفات هنا أو اضغط للاستعراض" Foreground="{StaticResource TextSecondary}" Margin="0,10,0,0" FontSize="13"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- قائمة الملفات المضافة -->
                <Border Grid.Row="3" 
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Background="{StaticResource ControlBackground}"
                        Margin="0,0,0,20">

                    <ListBox x:Name="FilesList" 
                             Background="Transparent" 
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             Padding="5">

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Margin" Value="0,2"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="ItemBorder" Background="Transparent" CornerRadius="4">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#10FFFFFF"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#20007ACC"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <materialDesign:PackIcon Kind="{Binding Icon}" Foreground="{StaticResource AccentColor}" Width="20" Height="20" VerticalAlignment="Center" Margin="5,0"/>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                                        <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextPrimary}" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Size}" Foreground="{StaticResource TextMuted}" FontSize="11"/>
                                    </StackPanel>

                                    <Button Grid.Column="2" 
                                            Style="{StaticResource MaterialDesignIconForegroundButton}" 
                                            Width="25" Height="25" 
                                            Foreground="{StaticResource TextSecondary}"
                                            Click="BtnRemoveFile_Click"
                                            ToolTip="إزالة الملف">
                                        <materialDesign:PackIcon Kind="Close" Width="18" Height="18"/>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <!-- الأزرار -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                    <components:TechButton Title="إنشاء المساحة" 
                                           Icon="FolderPlus" 
                                           Width="180" 
                                           Height="45"
                                           Margin="8,0"
                                           Background="{StaticResource AccentColor}"
                                           HighlightBrush="White"
                                           BorderThickness="0"
                                           Click="BtnCreate_Click"/>

                    <components:TechButton Title="إلغاء" 
                                           Icon="Close" 
                                           Width="120" 
                                           Height="45"
                                           Margin="8,0"
                                           Background="Transparent"
                                           BorderBrush="{StaticResource BorderColor}"
                                           BorderThickness="1"
                                           HighlightBrush="{StaticResource TextSecondary}"
                                           Click="BtnCancel_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>