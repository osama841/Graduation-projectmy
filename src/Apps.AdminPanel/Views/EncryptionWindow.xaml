<UserControl x:Class="Apps.AdminPanel.Views.EncryptionWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:components="clr-namespace:Apps.AdminPanel.Components"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="700"
             FlowDirection="RightToLeft">

    <Grid>
        <!-- العنوان الرئيسي -->
        <TextBlock Text="تشفير المحتوى (بصمة الجهاز)" 
                   Foreground="{StaticResource TextPrimary}" 
                   FontSize="26" FontWeight="SemiBold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"
                   Margin="0,0,0,20"/>

        <!-- البطاقة الرئيسية -->
        <Border Margin="20,50,20,20"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="4"
                Background="{StaticResource PanelBackground}">

            <!-- ظل خفيف -->
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
            </Border.Effect>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- قسم اختيار الملف -->
                    <RowDefinition Height="Auto"/>
                    <!-- قسم بصمة الجهاز -->
                    <RowDefinition Height="Auto"/>
                    <!-- قسم الخيارات -->
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <!-- زر التنفيذ -->
                </Grid.RowDefinitions>

                <!-- القسم 1: اختيار الملف -->
                <Border Grid.Row="0" 
                        Background="{StaticResource ControlBackground}"
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15" 
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="FileDocumentBoxPlus" Foreground="{StaticResource AccentColor}" VerticalAlignment="Center"/>
                            <TextBlock Text="الملف المراد تشفيره" Foreground="{StaticResource TextPrimary}" FontSize="15" FontWeight="Medium" Margin="8,0,0,0"/>
                        </StackPanel>

                        <!-- منطقة السحب والإفلات -->
                        <Grid Grid.Row="1" Height="90" Cursor="Hand" MouseDown="FileArea_MouseDown" AllowDrop="True" Drop="FileArea_Drop">
                            <!-- حدود متقطعة -->
                            <Rectangle Stroke="{StaticResource AccentColor}" StrokeThickness="1" StrokeDashArray="4 4" RadiusX="4" RadiusY="4" Fill="{StaticResource AppBackground}" Opacity="0.5"/>

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="CloudUploadOutline" Width="35" Height="35" Foreground="{StaticResource AccentColor}" HorizontalAlignment="Center" Opacity="0.8"/>
                                <TextBlock Text="اضغط للاختيار أو اسحب الملف هنا" Foreground="{StaticResource TextSecondary}" FontSize="13" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- تفاصيل الملف المختار -->
                        <Grid Grid.Row="2" Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="الاسم:" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock x:Name="TxtFileName" Text="document_secure.pdf" Foreground="{StaticResource TextPrimary}" FontWeight="Medium" Margin="5,0,0,0" Grid.Column="1"/>

                            <TextBlock Text="الحجم:" Foreground="{StaticResource TextSecondary}" Grid.Column="2" Margin="10,0,0,0"/>
                            <TextBlock x:Name="TxtFileSize" Text="2.5 MB" Foreground="{StaticResource TextPrimary}" FontWeight="Medium" Margin="5,0,0,0" Grid.Column="3"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- القسم 2: بصمة الجهاز -->
                <Border Grid.Row="1" 
                        Background="Transparent"
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15" 
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="Fingerprint" Foreground="{StaticResource AccentColor}" VerticalAlignment="Center"/>
                            <TextBlock Text="تحديد الجهاز الهدف (Hardware ID)" Foreground="{StaticResource TextPrimary}" FontSize="15" FontWeight="Medium" Margin="8,0,0,0"/>
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <!-- الأزرار -->
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <!-- الإدخال -->
                            </Grid.ColumnDefinitions>

                            <!-- أزرار التوليد -->
                            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                                <components:TechButton Title="توليد تلقائي" 
                                                       Icon="AutoFix" 
                                                       Width="160" Height="40" 
                                                       FontSize="12"
                                                       Background="Transparent"
                                                       BorderBrush="{StaticResource AccentColor}"
                                                       BorderThickness="1"
                                                       HighlightBrush="{StaticResource AccentColor}"
                                                       Margin="0,0,0,10"
                                                       Click="BtnGenerateID_Click"/>

                                <components:TechButton Title="إدخال يدوي" 
                                                       Icon="Keyboard" 
                                                       Width="160" Height="40" 
                                                       FontSize="12"
                                                       Background="Transparent"
                                                       BorderBrush="{StaticResource BorderColor}"
                                                       BorderThickness="1"
                                                       HighlightBrush="{StaticResource TextSecondary}"
                                                       Click="BtnManualID_Click"/>
                            </StackPanel>

                            <!-- حقل عرض البصمة -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Top">
                                <components:TechTextBox x:Name="TxtDeviceID"
                                                        Text="A1B2-C3D4-E5F6-G7H8"
                                                        Hint="Device ID"
                                                        Icon="Identifier"
                                                        Height="45"
                                                        FontSize="16"
                                                        FontWeight="Bold"/>

                                <TextBlock Text="سيتمكن فقط الجهاز صاحب هذه البصمة من فك التشفير." 
                                           Foreground="{StaticResource TextMuted}" 
                                           FontSize="11" 
                                           Margin="5,5,0,0" 
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- القسم 3: خيارات التشفير -->
                <Border Grid.Row="2" 
                        Background="Transparent"
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15" 
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="Tune" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                            <TextBlock Text="إعدادات متقدمة" Foreground="{StaticResource TextPrimary}" FontSize="15" FontWeight="Medium" Margin="8,0,0,0"/>
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="خوارزمية التشفير:" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>

                            <!-- ComboBox عادي مع تنسيق بسيط ليناسب الثيم -->
                            <ComboBox Grid.Column="1" 
                                      Height="35" 
                                      Padding="10,0"
                                      Foreground="{StaticResource TextPrimary}"
                                      BorderBrush="{StaticResource BorderColor}"
                                      Background="{StaticResource ControlBackground}">
                                <ComboBoxItem Content="AES-256 (مستحسن - عسكري)" IsSelected="True"/>
                                <ComboBoxItem Content="AES-128 (أسرع)"/>
                                <ComboBoxItem Content="RSA-2048 (مفاتيح عامة)"/>
                            </ComboBox>
                        </Grid>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="إضافة علامة مائية:" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                                <ToggleButton IsChecked="True" Background="{StaticResource AccentColor}"/>
                                <TextBlock Text="نعم، أضف معرف المستخدم للملف" Foreground="{StaticResource TextMuted}" FontSize="11" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- زر البدء -->
                <components:TechButton Grid.Row="4" 
                                       Title="بدء عملية التشفير" 
                                       Icon="LockCheck" 
                                       Width="250" 
                                       Height="45"
                                       FontSize="16"
                                       Background="{StaticResource AccentColor}"
                                       HighlightBrush="White"
                                       BorderThickness="0"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"
                                       Click="BtnEncrypt_Click"/>

            </Grid>
        </Border>
    </Grid>
</UserControl>