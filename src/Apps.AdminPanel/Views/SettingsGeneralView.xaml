<UserControl x:Class="Apps.AdminPanel.Views.SettingsGeneralView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:components="clr-namespace:Apps.AdminPanel.Components"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800"
             FlowDirection="RightToLeft">

    <Grid>
        <!-- العنوان الرئيسي -->
        <TextBlock Text="إعدادات النظام" 
                   Foreground="{StaticResource TextPrimary}" 
                   FontSize="26" FontWeight="SemiBold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"
                   Margin="0,0,0,20"/>

        <!-- البطاقة الرئيسية -->
        <Border Margin="20,50,20,20"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="4"
                Background="{StaticResource PanelBackground}">

            <!-- إضافة الظل لتوحيد التصميم مع باقي الصفحات -->
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
            </Border.Effect>

            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- عنوان القسم -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                    <Rectangle Width="4" Height="24" Fill="{StaticResource AccentColor}"/>
                    <TextBlock Text="الإعدادات العامة" 
                               Foreground="{StaticResource TextPrimary}" 
                               FontSize="20" FontWeight="Medium" 
                               VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- نموذج البيانات -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- الصف 1: اسم النظام -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="اسم النظام" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" FontSize="14"/>
                    <components:TechTextBox Grid.Row="0" Grid.Column="1" Text="نظام المستقبل" Hint="اسم النظام" Icon="Laptop" Margin="0,0,0,15"
                                            Foreground="{StaticResource TextPrimary}" 
                                            Background="{StaticResource ControlBackground}" 
                                            BorderBrush="{StaticResource BorderColor}"/>

                    <!-- الصف 2: الوصف -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="وصف النظام" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" FontSize="14"/>
                    <components:TechTextBox Grid.Row="1" Grid.Column="1" Text="نظام متكامل للإدارة" Hint="الوصف" Icon="Text" Margin="0,0,0,15"
                                            Foreground="{StaticResource TextPrimary}" 
                                            Background="{StaticResource ControlBackground}"/>

                    <!-- الصف 3: اللغة -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="اللغة الافتراضية" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" FontSize="14"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" Margin="0,0,0,15"
                              Foreground="{StaticResource TextPrimary}"
                              BorderBrush="{StaticResource BorderColor}"
                              Background="{StaticResource ControlBackground}"
                              Height="40"
                              Padding="10,0">
                        <ComboBoxItem Content="العربية" IsSelected="True"/>
                        <ComboBoxItem Content="English"/>
                    </ComboBox>

                    <!-- الصف 4: المنطقة الزمنية -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="المنطقة الزمنية" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" FontSize="14"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" Margin="0,0,0,15"
                              Foreground="{StaticResource TextPrimary}"
                              BorderBrush="{StaticResource BorderColor}"
                              Background="{StaticResource ControlBackground}"
                              Height="40"
                              Padding="10,0">
                        <ComboBoxItem Content="GMT+3:00 (KSA)" IsSelected="True"/>
                        <ComboBoxItem Content="GMT+0:00 (UTC)"/>
                        <ComboBoxItem Content="GMT-5:00 (EST)"/>
                    </ComboBox>

                    <!-- الصف 5: التحديثات -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="التحديثات التلقائية" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" FontSize="14"/>
                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                        <ToggleButton IsChecked="True" Background="{StaticResource AccentColor}"/>
                        <TextBlock Text="مفعل" Foreground="{StaticResource SuccessBrush}" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="14"/>
                    </StackPanel>
                </Grid>

                <!-- شريط التقدم (مثال لحالة النظام) -->
                <Grid Grid.Row="3" Margin="0,30,0,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="اكتمال إعداد النظام" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,5"/>
                    <ProgressBar Grid.Row="1"
                                 Value="75" Maximum="100" 
                                 Height="8" 
                                 Foreground="{StaticResource AccentColor}" 
                                 Background="{StaticResource ControlBackground}" 
                                 BorderThickness="0"/>
                </Grid>

                <!-- الأزرار -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">

                    <components:TechButton Title="حفظ التغييرات" 
                                           Icon="ContentSave" 
                                           Width="180" 
                                           Margin="10,0"
                                           Background="{StaticResource AccentColor}"
                                           Foreground="White"
                                           HighlightBrush="White"
                                           Click="BtnSave_Click"/>

                    <components:TechButton Title="استعادة الافتراضي" 
                                           Icon="Restore" 
                                           Width="180" 
                                           Margin="10,0"
                                           HighlightBrush="{StaticResource ErrorBrush}"
                                           Background="Transparent"
                                           BorderBrush="{StaticResource BorderColor}"
                                           BorderThickness="1"
                                           Click="BtnReset_Click"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</UserControl>