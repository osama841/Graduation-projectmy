<Window x:Class="Apps.AdminPanel.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:components="clr-namespace:Apps.AdminPanel.Components"
        mc:Ignorable="d"
        Title="إنشاء حساب" Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
   
        FlowDirection="RightToLeft"
        MouseDown="Window_MouseDown">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/Images/encryption.jpg" Stretch="UniformToFill" Opacity="0.9"/>
        </Grid.Background>
        <Rectangle Fill="{StaticResource MainBackgroundBrush}" Opacity="0.7"/>

        <Border Width="500" Height="580"
                BorderBrush="{StaticResource NeonBlueBrush}"
                BorderThickness="2"
                CornerRadius="20"
                Background="#CC050A14"
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="#00F0FF" BlurRadius="30" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="إنشاء حساب"
                           Foreground="{StaticResource NeonBlueBrush}"
                           FontSize="32"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00F0FF" BlurRadius="10" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>

                <StackPanel Grid.Row="1" VerticalAlignment="Center">

                    <components:TechTextBox x:Name="TxtRegUsername"
                                            Hint="اسم المستخدم"
                                            Icon="Account"
                                            Margin="0,0,0,20"/>

                    <components:TechTextBox x:Name="TxtRegEmail"
                                            Hint="البريد الإلكتروني"
                                            Icon="Email"
                                            Margin="0,0,0,20"/>

                    <components:TechPasswordBox x:Name="TxtRegPassword"
                                                Hint="كلمة المرور"
                                                Icon="Lock"
                                                Margin="0,0,0,10"/>
                </StackPanel>

                <TextBlock Grid.Row="2" 
                           HorizontalAlignment="Center" 
                           Margin="0,25,0,30"
                           FontSize="14"
                           Foreground="{StaticResource LightTextBrush}">
                    لديك حساب بالفعل؟ 
                    <Hyperlink Click="HypLogin_Click" Foreground="{StaticResource NeonBlueBrush}" TextDecorations="None" Cursor="Hand">
                        تسجيل الدخول
                    </Hyperlink>
                </TextBlock>

                <components:TechButton x:Name="BtnRegister"
                                       Grid.Row="3"
                                       Title="إنشاء حساب"
                                       Icon="AccountPlus"
                                       Width="200"
                                       Click="BtnRegister_Click"/>
            </Grid>
        </Border>

        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="20"
                Foreground="{StaticResource NeonBlueBrush}"
                ToolTip="إغلاق التطبيق"
                Click="BtnClose_Click">
            <materialDesign:PackIcon Kind="WindowClose" Width="24" Height="24"/>
        </Button>
    </Grid>
</Window>
