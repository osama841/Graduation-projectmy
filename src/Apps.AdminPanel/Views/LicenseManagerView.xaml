<UserControl x:Class="Apps.AdminPanel.Views.LicenseManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:components="clr-namespace:Apps.AdminPanel.Components"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             FlowDirection="RightToLeft">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="ModernSlimScrollBarStyle" TargetType="{x:Type ScrollBar}">
                <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
                <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Width" Value="6"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid x:Name="Bg" SnapsToDevicePixels="true">
                                <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsEnabled}">

                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="{x:Static ScrollBar.LineUpCommand}" Opacity="0" Visibility="Collapsed"/>
                                    </Track.DecreaseRepeatButton>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="{x:Static ScrollBar.LineDownCommand}" Opacity="0" Visibility="Collapsed"/>
                                    </Track.IncreaseRepeatButton>

                                    <Track.Thumb>
                                        <Thumb>
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="{x:Type Thumb}">
                                                    <Border x:Name="ThumbBorder" 
                                                    Background="#40FFFFFF" 
                                                    CornerRadius="3" 
                                                    Width="4" 
                                                    HorizontalAlignment="Center"/>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ThumbBorder" Property="Background" Value="#80FFFFFF"/>
                                                        </Trigger>
                                                        <Trigger Property="IsDragging" Value="True">
                                                            <Setter TargetName="ThumbBorder" Property="Background" Value="{StaticResource AccentColor}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>

                            <ControlTemplate.Triggers>
                                <Trigger Property="Orientation" Value="Horizontal">
                                    <Setter Property="Width" Value="Auto"/>
                                    <Setter Property="Height" Value="6"/>
                                    <Setter Property="MinWidth" Value="0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ModernSlimScrollBarStyle}"/>

      

        <DataTemplate x:Key="ListItemTemplate">
            <Border x:Name="ItemBorder"
                    Height="50" 
                    Background="Transparent" 
                    BorderBrush="{StaticResource BorderColor}" 
                    BorderThickness="0,0,0,1" 
                    Padding="15,0" 
                    Cursor="Hand"
                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListBox}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>

                    <Viewbox Width="24" Height="24" Margin="0,0,15,0">
                        <materialDesign:PackIcon x:Name="ListIcon" 
                                                 Kind="FolderKey" 
                                                 Foreground="#FFFFCA28"/>
                    </Viewbox>

                    <TextBlock Grid.Column="1" 
                               Text="{Binding Name}" 
                               VerticalAlignment="Center" 
                               Foreground="{StaticResource TextPrimary}" 
                               FontWeight="Medium"/>

                    <TextBlock x:Name="ListInfo" 
                               Grid.Column="2" 
                               Text="{Binding FileCount, StringFormat='{}{0} ملفات'}" 
                               VerticalAlignment="Center" 
                               Foreground="{StaticResource TextSecondary}" 
                               FontSize="13"/>

                    <TextBlock Grid.Column="3" 
                               Text="{Binding DateCreated, StringFormat='yyyy-MM-dd'}" 
                               VerticalAlignment="Center" 
                               Foreground="{StaticResource TextMuted}" 
                               FontSize="13"/>
                </Grid>
            </Border>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                    <Setter TargetName="ItemBorder" Property="Background" Value="#1500E676"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding Type}" Value="File">
                    <Setter TargetName="ListIcon" Property="Kind" Value="FileLock"/>
                    <Setter TargetName="ListIcon" Property="Foreground" Value="#FF03A9F4"/>
                    <Setter TargetName="ListInfo" Property="Text" Value="{Binding Size}"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <ItemsPanelTemplate x:Key="ListPanelTemplate">
            <VirtualizingStackPanel IsItemsHost="True"/>
        </ItemsPanelTemplate>

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,5" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Button x:Name="BtnBack" Style="{StaticResource MaterialDesignIconForegroundButton}" Foreground="{StaticResource TextSecondary}" Click="BtnBack_Click" Visibility="Collapsed" Margin="0,0,5,0">
                        <materialDesign:PackIcon Kind="ArrowRight" Width="24" Height="24"/>
                    </Button>
                    <materialDesign:PackIcon Kind="SafeSquare" Foreground="{StaticResource AccentColor}" Width="24" Height="24" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtCurrentPath" Text="إدارة التراخيص" Foreground="{StaticResource TextPrimary}" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">

                    <components:TechTextBox x:Name="TxtSearch" 
                                            Hint="بحث سريع..." 
                                            Icon="Magnify" 
                                            Width="240" 
                                            Height="36" 
                                            Background="{StaticResource ControlBackground}" 
                                            BorderBrush="{StaticResource BorderColor}" 
                                            BorderThickness="1"
                                            TextChanged="TxtSearch_TextChanged"/>
                </StackPanel>
            </Grid>

            <ScrollViewer Grid.Row="1" Padding="0">
                <ListBox x:Name="PackagesList" 
                         Background="Transparent" 
                         BorderThickness="0"
                         SelectionMode="Extended" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         MouseDoubleClick="PackagesList_MouseDoubleClick"
                         ItemTemplate="{StaticResource ListItemTemplate}"
                         ItemsPanel="{StaticResource ListPanelTemplate}">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </ScrollViewer>
        </Grid>

        <Border Grid.Column="1" 
                Width="320"
                Background="{StaticResource PanelBackground}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="1,0,0,0">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedItem, ElementName=PackagesList}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid DataContext="{Binding SelectedItem, ElementName=PackagesList}" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="تفاصيل العنصر" Foreground="{StaticResource TextPrimary}" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <materialDesign:Card Background="{StaticResource AppBackground}" Padding="15" UniformCornerRadius="8" Margin="0,0,0,15" BorderThickness="1" BorderBrush="{StaticResource BorderColor}">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="50" Height="50" Background="{StaticResource PanelBackground}" CornerRadius="6" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                        <materialDesign:PackIcon Kind="FolderKey" Width="28" Height="28" Foreground="{StaticResource AccentColor}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" TextWrapping="Wrap"/>
                                        <TextBlock Text="مستوى التشفير: AES-256" Foreground="{StaticResource TextMuted}" FontSize="10" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>

                                <Separator Background="{StaticResource BorderColor}" Margin="0,12"/>

                                <UniformGrid Columns="2">
                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock Text="المحتويات" Foreground="{StaticResource TextSecondary}" FontSize="10"/>
                                        <TextBlock Text="{Binding FileCount}" Foreground="{StaticResource TextPrimary}" FontWeight="Bold" Margin="0,1,0,0"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock Text="الحجم" Foreground="{StaticResource TextSecondary}" FontSize="10"/>
                                        <TextBlock Text="{Binding Size}" Foreground="{StaticResource TextPrimary}" FontWeight="Bold" Margin="0,1,0,0"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="التاريخ" Foreground="{StaticResource TextSecondary}" FontSize="10"/>
                                        <TextBlock Text="{Binding DateCreated, StringFormat='yyyy-MM-dd'}" Foreground="{StaticResource TextPrimary}" FontWeight="Bold" Margin="0,1,0,0"/>
                                    </StackPanel>
                                </UniformGrid>
                            </StackPanel>
                        </materialDesign:Card>

                        <StackPanel>
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Type}" Value="File">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <Grid Margin="5">
                                <TextBlock Text="التراخيص الممنوحة" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" FontSize="12"/>
                                <Button Style="{StaticResource MaterialDesignFlatButton}" 
        Content="عرض السجل" 
        Height="25" 
        FontSize="11" 
        Padding="5,0" 
        HorizontalAlignment="Right" 
        Foreground="{StaticResource AccentColor}"
        Cursor="Hand"/>

                            </Grid>

                            <ItemsControl ItemsSource="{Binding ActiveUsers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource ControlBackground}" CornerRadius="4" Padding="8,6" Margin="0,0,0,5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <materialDesign:PackIcon Kind="AccountCircle" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Width="16" Height="16"/>
                                                <TextBlock Grid.Column="1" Text="{Binding UserName}" Foreground="{StaticResource TextPrimary}" Margin="8,0" FontSize="11" VerticalAlignment="Center"/>
                                                <Border Grid.Column="2" Background="#2000E676" CornerRadius="3" Padding="4,1">
                                                    <TextBlock Text="ساري" Foreground="#00E676" FontSize="9"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Margin="0,15,0,0">
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Height="45"
                            Background="{StaticResource AccentColor}"
                            Foreground="White"
                            materialDesign:ButtonAssist.CornerRadius="6"
                            Click="BtnGrantLicense_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="KeyPlus" Margin="0,0,8,0" VerticalAlignment="Center" Width="18" Height="18"/>
                            <TextBlock Text="إصدار ترخيص" VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
