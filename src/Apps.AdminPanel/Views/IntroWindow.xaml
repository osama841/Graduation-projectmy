<Window x:Class="Apps.AdminPanel.Views.IntroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="IntroWindow" Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        FlowDirection="RightToLeft"
        Loaded="Window_Loaded">

    <!-- الإطار الخارجي مع الظل والحواف الناعمة -->
    <Border Background="{StaticResource AppBackground}"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1"
            CornerRadius="4">

        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <!-- زخرفة خلفية هندسية خفيفة -->
            <Path Data="M 0,450 L 700,0 L 700,450 Z" Fill="{StaticResource PanelBackground}" Opacity="0.3" Stretch="Fill"/>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- الشعار -->
                <Grid HorizontalAlignment="Center" Margin="0,0,0,25">
                    <Border Width="120" Height="120" 
                            CornerRadius="60" 
                            Background="{StaticResource PanelBackground}" 
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1">
                        <materialDesign:PackIcon Kind="ShieldLock" 
                                               Width="60" Height="60"
                                               Foreground="{StaticResource AccentColor}"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- اسم النظام -->
                <TextBlock Text="نظام الأمان المتقدم" 
                           Foreground="{StaticResource TextPrimary}"
                           FontSize="32"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           FontFamily="Segoe UI"
                           Margin="0,0,0,10"/>

                <!-- وصف قصير -->
                <TextBlock Text="جاري تهيئة بيئة العمل الآمنة..." 
                           Foreground="{StaticResource TextSecondary}"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- شريط التحميل -->
                <Grid Width="400">
                    <ProgressBar Value="0" Maximum="100" Height="4" 
                                 Foreground="{StaticResource AccentColor}" 
                                 Background="{StaticResource ControlBackground}" 
                                 BorderThickness="0"
                                 IsIndeterminate="True"/>
                </Grid>

                <!-- حقوق الملكية في الأسفل -->
                <TextBlock Text="© 2025 Secure Systems Inc." 
                           Foreground="{StaticResource TextMuted}" 
                           FontSize="11" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,0"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>