<Page x:Class="SecurePlayer.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#0D0E1A">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Enhanced Header -->
        <Grid Grid.Row="0" Margin="0,0,0,35">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Border CornerRadius="12" Padding="14,10" Margin="0,0,18,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#1F2139" Offset="0"/>
                            <GradientStop Color="#252840" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#6366F1" BlurRadius="12" ShadowDepth="0" Opacity="0.4"/>
                    </Border.Effect>
                    <TextBlock Text="📊" FontSize="22" Foreground="#6366F1"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,0,3">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#6366F1" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="Overview of your secure media library" FontSize="13" Foreground="#A1A8B8" FontWeight="Light"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Stats Cards -->
                <Grid Grid.Row="0" Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Enhanced Total Videos Card -->
                    <Border Grid.Column="0" CornerRadius="20" Padding="28" Margin="0,0,18,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1A1C32" Offset="0"/>
                                <GradientStop Color="#1F2139" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border CornerRadius="12" Padding="14" Width="60" Height="60" Margin="0,0,0,18">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1F2139" Offset="0"/>
                                        <GradientStop Color="#252840" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="12" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                                <TextBlock Text="🎬" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="12" FontSize="36" FontWeight="Bold" Foreground="White" Margin="0,0,0,8">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="Total Videos" FontSize="14" Foreground="#A1A8B8" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>

                    <!-- Enhanced Total PDFs Card -->
                    <Border Grid.Column="1" CornerRadius="20" Padding="28" Margin="6,0,18,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1A1C32" Offset="0"/>
                                <GradientStop Color="#1F2139" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border CornerRadius="12" Padding="14" Width="60" Height="60" Margin="0,0,0,18">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1F2139" Offset="0"/>
                                        <GradientStop Color="#252840" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="12" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                                <TextBlock Text="📄" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="8" FontSize="36" FontWeight="Bold" Foreground="White" Margin="0,0,0,8">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="Total PDFs" FontSize="14" Foreground="#A1A8B8" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>

                    <!-- Enhanced Play Time Card -->
                    <Border Grid.Column="2" CornerRadius="20" Padding="28" Margin="6,0,18,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1A1C32" Offset="0"/>
                                <GradientStop Color="#1F2139" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border CornerRadius="12" Padding="14" Width="60" Height="60" Margin="0,0,0,18">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1F2139" Offset="0"/>
                                        <GradientStop Color="#252840" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="12" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                                <TextBlock Text="⏱️" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="24.5h" FontSize="36" FontWeight="Bold" Foreground="White" Margin="0,0,0,8">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="Total Play Time" FontSize="14" Foreground="#A1A8B8" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>

                    <!-- Enhanced Security Status Card -->
                    <Border Grid.Column="3" CornerRadius="20" Padding="28" Margin="6,0,0,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1A1C32" Offset="0"/>
                                <GradientStop Color="#1F2139" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border CornerRadius="12" Padding="14" Width="60" Height="60" Margin="0,0,0,18">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1F2139" Offset="0"/>
                                        <GradientStop Color="#252840" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="12" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                                <TextBlock Text="🔒" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Active" FontSize="36" FontWeight="Bold" Margin="0,0,0,8">
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#6366F1" Offset="0"/>
                                        <GradientStop Color="#8B5CF6" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="12" ShadowDepth="0" Opacity="0.5"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="Security Status" FontSize="14" Foreground="#A1A8B8" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Recent Activity -->
                <Grid Grid.Row="1" Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Enhanced Recent Files -->
                    <Border Grid.Column="0" CornerRadius="24" Padding="30" Margin="0,0,18,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1A1C32" Offset="0"/>
                                <GradientStop Color="#1F2139" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border CornerRadius="14" Padding="18,14" Margin="0,0,0,25">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1F2139" Offset="0"/>
                                        <GradientStop Color="#252840" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                </Border.Effect>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📋" FontSize="20" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Recent Activity" FontSize="17" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border CornerRadius="14" Padding="20,16" Margin="0,0,0,14" Cursor="Hand">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1F2139" Offset="0"/>
                                        <GradientStop Color="#252840" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="8" ShadowDepth="0" Opacity="0.2"/>
                                </Border.Effect>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#252840" Offset="0"/>
                                                            <GradientStop Color="#2A2D4A" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#6366F1" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🎬" FontSize="22" Margin="0,0,18,0" VerticalAlignment="Center"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="video_sample.mp4" FontSize="15" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,4"/>
                                            <TextBlock Text="Opened 2 hours ago" FontSize="13" Foreground="#A1A8B8"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border Background="#252738" CornerRadius="12" Padding="18,15" Margin="0,0,0,12" Cursor="Hand">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2A2D45"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📄" FontSize="20" Margin="0,0,15,0" VerticalAlignment="Center"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="document1.pdf" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,3"/>
                                            <TextBlock Text="Opened yesterday" FontSize="12" Foreground="#8B8B9A"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border Background="#252738" CornerRadius="12" Padding="18,15" Margin="0,0,0,0" Cursor="Hand">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2A2D45"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
    <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🎬" FontSize="20" Margin="0,0,15,0" VerticalAlignment="Center"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="tutorial.mp4" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,3"/>
                                            <TextBlock Text="Opened 3 days ago" FontSize="12" Foreground="#8B8B9A"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Enhanced Quick Actions -->
                    <Border Grid.Column="1" CornerRadius="24" Padding="30">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1A1C32" Offset="0"/>
                                <GradientStop Color="#1F2139" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border CornerRadius="14" Padding="18,14" Margin="0,0,0,25">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1F2139" Offset="0"/>
                                        <GradientStop Color="#252840" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                </Border.Effect>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⚡" FontSize="20" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Quick Actions" FontSize="17" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Button Foreground="White" Padding="20,16" BorderThickness="0" Margin="0,0,0,14" Cursor="Hand">
                                <Button.RenderTransform>
                                    <ScaleTransform x:Name="DashBtn1Scale" ScaleX="1" ScaleY="1"/>
                                </Button.RenderTransform>
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#6366F1" Offset="0"/>
                                        <GradientStop Color="#8B5CF6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="▶️" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Play Video" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button.Content>
                                <Button.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="12" ShadowDepth="0" Opacity="0.6"/>
                                </Button.Effect>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#6B6DCE"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#5E60CE" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="DashBtn1Scale"
                                                               Storyboard.TargetProperty="ScaleX"
                                                               To="1.03" 
                                                               Duration="0:0:0.15"/>
                                                <DoubleAnimation Storyboard.TargetName="DashBtn1Scale"
                                                               Storyboard.TargetProperty="ScaleY"
                                                               To="1.03" 
                                                               Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="Button.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="DashBtn1Scale"
                                                               Storyboard.TargetProperty="ScaleX"
                                                               To="1" 
                                                               Duration="0:0:0.15"/>
                                                <DoubleAnimation Storyboard.TargetName="DashBtn1Scale"
                                                               Storyboard.TargetProperty="ScaleY"
                                                               To="1" 
                                                               Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>

                            <Button Foreground="White" Padding="20,16" BorderThickness="0" Margin="0,0,0,14" Cursor="Hand">
                                <Button.RenderTransform>
                                    <ScaleTransform x:Name="DashBtn2Scale" ScaleX="1" ScaleY="1"/>
                                </Button.RenderTransform>
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1F2139" Offset="0"/>
                                        <GradientStop Color="#252840" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📄" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Open PDF" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button.Content>
                                <Button.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="8" ShadowDepth="0" Opacity="0.2"/>
                                </Button.Effect>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#252840" Offset="0"/>
                                                            <GradientStop Color="#2A2D4A" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#6366F1" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="DashBtn2Scale"
                                                               Storyboard.TargetProperty="ScaleX"
                                                               To="1.02" 
                                                               Duration="0:0:0.15"/>
                                                <DoubleAnimation Storyboard.TargetName="DashBtn2Scale"
                                                               Storyboard.TargetProperty="ScaleY"
                                                               To="1.02" 
                                                               Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="Button.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="DashBtn2Scale"
                                                               Storyboard.TargetProperty="ScaleX"
                                                               To="1" 
                                                               Duration="0:0:0.15"/>
                                                <DoubleAnimation Storyboard.TargetName="DashBtn2Scale"
                                                               Storyboard.TargetProperty="ScaleY"
                                                               To="1" 
                                                               Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>

                            <Button Foreground="White" Padding="20,16" BorderThickness="0" Margin="0,0,0,0" Cursor="Hand">
                                <Button.RenderTransform>
                                    <ScaleTransform x:Name="DashBtn3Scale" ScaleX="1" ScaleY="1"/>
                                </Button.RenderTransform>
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1F2139" Offset="0"/>
                                        <GradientStop Color="#252840" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="⚙️" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Settings" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button.Content>
                                <Button.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="8" ShadowDepth="0" Opacity="0.2"/>
                                </Button.Effect>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2A2D45"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="DashBtn3Scale"
                                                               Storyboard.TargetProperty="ScaleX"
                                                               To="1.02" 
                                                               Duration="0:0:0.15"/>
                                                <DoubleAnimation Storyboard.TargetName="DashBtn3Scale"
                                                               Storyboard.TargetProperty="ScaleY"
                                                               To="1.02" 
                                                               Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="Button.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="DashBtn3Scale"
                                                               Storyboard.TargetProperty="ScaleX"
                                                               To="1" 
                                                               Duration="0:0:0.15"/>
                                                <DoubleAnimation Storyboard.TargetName="DashBtn3Scale"
                                                               Storyboard.TargetProperty="ScaleY"
                                                               To="1" 
                                                               Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
