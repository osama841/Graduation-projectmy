<Page x:Class="SecurePlayer.Pages.ErrorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#151725">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#151725" Offset="0"/>
                <GradientStop Color="#1E2139" Offset="0.5"/>
                <GradientStop Color="#151725" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Decorative Elements -->
        <Canvas>
            <Ellipse Width="300" Height="300" Canvas.Left="-100" Canvas.Top="-100" Opacity="0.03">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#E81123" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <!-- Main Content -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="600">
            <StackPanel>
                <!-- Error Icon -->
                <Border Width="140" Height="140" 
                       Background="#1E2032" 
                       CornerRadius="70"
                       Margin="0,0,0,40"
                       HorizontalAlignment="Center"
                       BorderThickness="3">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#E81123" Offset="0"/>
                            <GradientStop Color="#FF6B7A" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <TextBlock Text="⚠️" FontSize="70" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#E81123" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>

                <!-- Error Title -->
                <TextBlock Text="Oops! Something went wrong" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,15"
                          TextAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#E81123" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Error Message -->
                <TextBlock Text="We encountered an unexpected error. Please try again or contact support if the problem persists." 
                          FontSize="15" 
                          Foreground="#8B8B9A" 
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          LineHeight="24"
                          Margin="0,0,0,40"/>

                <!-- Error Details Card -->
                <Border Background="#1E2032" CornerRadius="15" Padding="25" Margin="0,0,0,40">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Error Details" 
                                  Foreground="White" 
                                  FontWeight="SemiBold" 
                                  FontSize="14" 
                                  Margin="0,0,0,15"/>
                        <Border Background="#252738" CornerRadius="10" Padding="18,15">
                            <TextBlock x:Name="ErrorDetailsText" 
                                      Text="Error code: 0x00000000" 
                                      FontSize="13" 
                                      Foreground="#8B8B9A"
                                      FontFamily="Consolas"
                                      TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Background="#5E60CE" Foreground="White" Padding="20,14" BorderThickness="0" Margin="0,0,12,0" Cursor="Hand">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔄" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Try Again" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                        <Button.Effect>
                            <DropShadowEffect Color="#5E60CE" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                        </Button.Effect>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#6B6DCE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Background="#252738" Foreground="White" Padding="20,14" BorderThickness="0" Cursor="Hand">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏠" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Go Home" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2A2D45"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
