<Page x:Class="SecurePlayer.Pages.LicensePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#151725">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Border Background="#252738" CornerRadius="10" Padding="12,8" Margin="0,0,15,0">
                    <TextBlock Text="📜" FontSize="20" Foreground="#5E60CE"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="License Information" FontSize="26" FontWeight="Bold" Foreground="White" Margin="0,0,0,2"/>
                    <TextBlock Text="View your license details and status" FontSize="12" Foreground="#8B8B9A"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- License Details -->
            <Border Grid.Column="0" Background="#1E2032" CornerRadius="20" Padding="30" Margin="0,0,15,0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <Border Background="#252738" CornerRadius="12" Padding="15,12" Margin="0,0,0,25">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔑" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="License Details" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="LICENSE KEY" Foreground="#8B8B9A" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Border Background="#252738" CornerRadius="10" Padding="18,15">
                            <TextBlock Text="XXXX-XXXX-XXXX-XXXX" FontSize="14" Foreground="White" FontFamily="Consolas"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="STATUS" Foreground="#8B8B9A" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Border Background="#252738" CornerRadius="10" Padding="18,15">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#5E60CE" Margin="0,0,10,0" VerticalAlignment="Center">
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="#5E60CE" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <TextBlock Text="Active" FontSize="14" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="EXPIRATION DATE" Foreground="#8B8B9A" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Border Background="#252738" CornerRadius="10" Padding="18,15">
                            <TextBlock Text="December 31, 2025" FontSize="14" Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,0">
                        <TextBlock Text="DEVICE ID" Foreground="#8B8B9A" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Border Background="#252738" CornerRadius="10" Padding="18,15">
                            <TextBlock Text="Device-XXXX-XXXX" FontSize="13" Foreground="#8B8B9A" FontFamily="Consolas"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- License Features -->
            <Border Grid.Column="1" Background="#1E2032" CornerRadius="20" Padding="30">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <Border Background="#252738" CornerRadius="12" Padding="15,12" Margin="0,0,0,25">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✨" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="License Features" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#252738" CornerRadius="12" Padding="18,15" Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✅" FontSize="18" Margin="0,0,15,0" VerticalAlignment="Center"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Unlimited Video Playback" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,3"/>
                                <TextBlock Text="Play any number of videos" FontSize="12" Foreground="#8B8B9A"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#252738" CornerRadius="12" Padding="18,15" Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✅" FontSize="18" Margin="0,0,15,0" VerticalAlignment="Center"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="PDF Viewer Access" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,3"/>
                                <TextBlock Text="View protected PDF documents" FontSize="12" Foreground="#8B8B9A"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#252738" CornerRadius="12" Padding="18,15" Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✅" FontSize="18" Margin="0,0,15,0" VerticalAlignment="Center"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Advanced Security" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,3"/>
                                <TextBlock Text="DRM protection enabled" FontSize="12" Foreground="#8B8B9A"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#252738" CornerRadius="12" Padding="18,15" Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✅" FontSize="18" Margin="0,0,15,0" VerticalAlignment="Center"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Device Binding" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,3"/>
                                <TextBlock Text="Secure device authentication" FontSize="12" Foreground="#8B8B9A"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#252738" CornerRadius="12" Padding="18,15" Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✅" FontSize="18" Margin="0,0,15,0" VerticalAlignment="Center"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Priority Support" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,3"/>
                                <TextBlock Text="24/7 customer assistance" FontSize="12" Foreground="#8B8B9A"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
