<Window x:Class="SecurePlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secure Video Player" 
        Height="720" Width="1280"
        WindowStyle="None" 
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Enhanced Color Palette - Professional & Harmonious -->
        <SolidColorBrush x:Key="DarkBg" Color="#0D0E1A"/>
        <SolidColorBrush x:Key="PanelBg" Color="#16182E"/>
        <SolidColorBrush x:Key="AccentColor" Color="#6366F1"/>
        <SolidColorBrush x:Key="AccentColor2" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="TextColor" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#A1A8B8"/>
        <SolidColorBrush x:Key="HoverBg" Color="#1F2139"/>
        <SolidColorBrush x:Key="ActiveBg" Color="#6366F1"/>
        <SolidColorBrush x:Key="CardBg" Color="#1A1C32"/>
        <SolidColorBrush x:Key="BorderColor" Color="#2A2D4A"/>
        
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#6366F1" Offset="0"/>
            <GradientStop Color="#8B5CF6" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0D0E1A" Offset="0"/>
            <GradientStop Color="#16182E" Offset="0.5"/>
            <GradientStop Color="#0D0E1A" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A1C32" Offset="0"/>
            <GradientStop Color="#1F2139" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Animation Resources -->
        <Duration x:Key="FastDuration">0:0:0.2</Duration>
        <Duration x:Key="NormalDuration">0:0:0.3</Duration>
        <Duration x:Key="SlowDuration">0:0:0.5</Duration>
        
        <!-- Button Style with Smooth Animations -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#8B8B9A"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform X="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                               Background="{TemplateBinding Background}" 
                               CornerRadius="10"
                               BorderThickness="0"
                               Padding="{TemplateBinding Padding}">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#1F2139" Offset="0"/>
                                            <GradientStop Color="#252840" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.03" 
                                                           Duration="{StaticResource FastDuration}"/>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.03" 
                                                           Duration="{StaticResource FastDuration}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1" 
                                                           Duration="{StaticResource FastDuration}"/>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1" 
                                                           Duration="{StaticResource FastDuration}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundGradient}" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Enhanced Title Bar with Gradient -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#0F1119" Offset="0"/>
                        <GradientStop Color="#16182E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="2" Opacity="0.4"/>
                </Border.Effect>
                <Grid FlowDirection="RightToLeft">
                    <!-- Title with Enhanced Design -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0">
                        <Border CornerRadius="8" Padding="8" Margin="0,0,15,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#6366F1" Offset="0"/>
                                    <GradientStop Color="#8B5CF6" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#6366F1" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                            </Border.Effect>
                            <TextBlock Text="🛡️" FontSize="18" Foreground="White" Margin="2,0,0,0"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="المشغل الآمن" FontSize="16" Foreground="White" FontWeight="Bold" Margin="0,0,0,1"/>
                            <TextBlock Text="تجربة ميديا مميزة" FontSize="10" Foreground="#A1A8B8" Margin="0,-2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Window Control Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,0,0,0" FlowDirection="LeftToRight">
                        <!-- Minimize Button -->
                        <Button Width="45" Height="45" 
                               Background="Transparent" 
                               Foreground="White" 
                               BorderThickness="0" 
                               Click="MinimizeButton_Click"
                               Cursor="Hand"
                               FontSize="16"
                               FontWeight="Bold"
                               Content="−">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2A2D45"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Maximize/Restore Button -->
                        <Button x:Name="MaximizeButton" Width="45" Height="45" 
                               Background="Transparent" 
                               Foreground="White" 
                               BorderThickness="0" 
                               Click="MaximizeButton_Click"
                               Cursor="Hand"
                               FontSize="16"
                               FontWeight="Bold"
                               Content="□">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2A2D45"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Close Button -->
                        <Button Width="45" Height="45" 
                               Background="Transparent" 
                               Foreground="White" 
                               BorderThickness="0" 
                               Click="CloseButton_Click"
                               Cursor="Hand"
                               FontSize="18"
                               FontWeight="Bold"
                               Content="✕"
                               Margin="0,0,5,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E81123"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" FlowDirection="RightToLeft">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Enhanced Sidebar with Glass Effect -->
                <Border Grid.Column="0" CornerRadius="0,0,0,12" Margin="0,0,12,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#16182E" Offset="0"/>
                            <GradientStop Color="#1A1C32" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="3" Opacity="0.3" Direction="270"/>
                    </Border.Effect>
                    <StackPanel Margin="25,30">
                        <!-- Enhanced Logo with Gradient -->
                        <Border x:Name="LogoBorder" CornerRadius="16" Padding="18,15" Margin="0,0,0,40" Cursor="Hand">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1F2139" Offset="0"/>
                                    <GradientStop Color="#252840" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#6366F1" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="LogoScale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Border.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="LogoScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.05" 
                                                           Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="LogoScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.05" 
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Border.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="LogoScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1" 
                                                           Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="LogoScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1" 
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <StackPanel Orientation="Horizontal">
                                <Border CornerRadius="10" Padding="10" Margin="0,0,15,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#6366F1" Offset="0"/>
                                            <GradientStop Color="#8B5CF6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect Color="#6366F1" BlurRadius="12" ShadowDepth="0" Opacity="0.7"/>
                                    </Border.Effect>
                                    <TextBlock Text="🛡️" FontSize="26" Foreground="White" FontWeight="Bold"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="مشغل" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,2">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="#6366F1" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                    <TextBlock Text="آمن" FontSize="13" Foreground="#A1A8B8" Margin="0,-2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Menu Buttons -->
                        <Button x:Name="BtnDashboard" Style="{StaticResource SidebarButtonStyle}" Click="BtnDashboard_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="لوحة التحكم" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnVideoPlayer" Style="{StaticResource SidebarButtonStyle}" Click="BtnVideoPlayer_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="▶️" FontSize="16" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="مشغل الفيديو" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnPdfViewer" Style="{StaticResource SidebarButtonStyle}" Click="BtnPdfViewer_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📄" FontSize="16" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="عرض مستندات PDF" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnSettings" Style="{StaticResource SidebarButtonStyle}" Click="BtnSettings_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="16" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="الإعدادات" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnHelp" Style="{StaticResource SidebarButtonStyle}" Click="BtnHelp_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="❓" FontSize="16" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="مساعدة" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Background="#2A2D45" Opacity="0.5" Margin="0,25,0,15" Height="1"/>

                        <Button x:Name="BtnLogout" Style="{StaticResource SidebarButtonStyle}" Click="BtnLogout_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚪" FontSize="16" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="تسجيل الخروج" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Content Frame -->
                <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Margin="0,0,0,0"/>
            </Grid>
        </Grid>
    </Border>
</Window>

