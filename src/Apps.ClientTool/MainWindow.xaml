<Window x:Class="Apps.ClientTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Secure Device Fingerprint Tool v3.0" Height="550" Width="650"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <SolidColorBrush x:Key="NeonGreen" Color="#00E676"/>
        <Color x:Key="NeonGreenColor">#00E676</Color>
        <SolidColorBrush x:Key="NeonBlue" Color="#29B6F6"/>
        <SolidColorBrush x:Key="BgDarkColor" Color="#12151C"/>
        <SolidColorBrush x:Key="PanelColor" Color="#1B1F2A"/>
        <SolidColorBrush x:Key="TextGray" Color="#B0BEC5"/>


        <Style x:Key="CyberButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4FC3F7" Offset="0"/>
                        <GradientStop Color="#0288D1" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderBrush="#81D4FA" BorderThickness="0,1,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#03A9F4" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CopyButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#E0E0E0" Offset="0"/>
                        <GradientStop Color="#9E9E9E" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" BorderThickness="1" Background="{StaticResource PanelColor}">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#29B6F6" Offset="0"/>
                <GradientStop Color="#1B1F2A" Offset="0.5"/>
                <GradientStop Color="#29B6F6" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="30,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" LastChildFill="False" Margin="-10,10,-10,0">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Ellipse Width="12" Height="12" Fill="#29B6F6" Margin="5,0"/>
                    <TextBlock Text="Secure Device Fingerprint Tool v3.0" Foreground="#90A4AE" VerticalAlignment="Center" FontSize="12"/>
                </StackPanel>
                <Button Content="✕" Foreground="Gray" Background="Transparent" BorderThickness="0" FontSize="14" DockPanel.Dock="Right" Cursor="Hand"/>
            </DockPanel>

            <StackPanel Grid.Row="1" Margin="0,30,0,30">
                <TextBlock Text="YOUR UNIQUE DEVICE ID" 
                           Foreground="White" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           FontFamily="Segoe UI"/>
                <Border Height="3" Width="120" HorizontalAlignment="Left" Background="#29B6F6" Margin="0,5,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#29B6F6" BlurRadius="10" ShadowDepth="0"/>
                    </Border.Effect>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2">
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#232735" BorderBrush="#444" BorderThickness="1" CornerRadius="4" Height="45" Margin="0,0,10,0">
                        <TextBlock Text=""  Name="TxtFingerprint"
                                   VerticalAlignment="Center" Margin="15,0" Foreground="#DDD" FontFamily="Consolas" FontSize="14"/>
                    </Border>

                    <Button Grid.Column="1" Content="📋 COPY ID" Click="BtnCopyFingerprint_Click" Width="100" Height="45" Style="{StaticResource CopyButtonStyle}"/>
                </Grid>

                <Border Background="#1E222D" BorderBrush="#333" BorderThickness="1" CornerRadius="4" Height="45">
                    <TextBlock Text="" Name="TxtFingerprint2"
                               VerticalAlignment="Center" Margin="15,0" Foreground="#666" FontFamily="Consolas" FontSize="14"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,30">
                <Grid HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Ellipse Stroke="{StaticResource NeonGreen}" StrokeThickness="4" Margin="15,0,7,0">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="{StaticResource NeonGreenColor}" BlurRadius="15" ShadowDepth="0"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <Path Data="M 25,45 L 35,55 L 60,25" Stroke="{StaticResource NeonGreen}" StrokeThickness="5" HorizontalAlignment="Center" Height="59" VerticalAlignment="Top"/>

                    <TextBlock Text="Scan Complete" Foreground="#AAA" FontSize="14" Margin="100,30,-100,0" VerticalAlignment="Center"/>
                </Grid>

                <TextBlock Text="TRUST SCORE: 100/100 - HIGH TRUST" 
                           Foreground="{StaticResource NeonGreen}" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="{StaticResource NeonGreenColor}" BlurRadius="5" ShadowDepth="0" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="Please copy this ID and send it to the content provider for licensing." 
                           Foreground="#AAA" FontSize="13" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>

            <Button Grid.Row="4" Content="GENERATE NEW ID" Height="55" Click="BtnExtractFingerprint_Click" Style="{StaticResource CyberButtonStyle}"/>

        </Grid>
    </Border>
</Window>